      {% set ind = 0 %}
      {% for pendingShipment in pendingShipments %}
	{% set ind = ind + 1 %}
	{% if ind == 1 %}
	  <li class="active"><a data-toggle="pill" href="#home">{{pendingShipment.shippingDate|date('Y-m-d')}} ({{pendingShipment.id}})</a></li>
	{% else %}
	  <li><a data-toggle="pill" href="#menu{{ind}}">{{pendingShipment.shippingDate|date('Y-m-d')}} ({{pendingShipment.id}})</a></li>
	{% endif %}
